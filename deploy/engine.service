[Unit]
Description=Engine signing API service
After=network.target
StartLimitIntervalSec=300
StartLimitBurst=3

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/engine
EnvironmentFile=/home/ubuntu/engine-secrets/app.env
Restart=on-failure
RestartSec=15s
ExecStart=/home/ubuntu/engine-env/bin/uvicorn --proxy-headers --forwarded-allow-ips='127.0.0.1' --host 127.0.0.1 --port 7191 --workers 8 lootbox.api:app
SyslogIdentifier=engine

[Install]
WantedBy=multi-user.target
